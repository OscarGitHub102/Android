<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragments.reservation.Reservations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/blue_main">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/select_film"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutFilm"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteFilm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/film_selected"
                android:inputType="none"
                android:textStyle="italic"
                tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/select_food"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/eleccionSnacks"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textSnacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snacks"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/desplegableSnacks"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/textSnacks"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkBoxSnacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <CheckBox
                    android:id="@+id/snackCb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/snackCb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/snackCb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/snackCb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/snackCb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/snackCb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/snackCb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/snackCb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/snackCb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/snackCb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/eleccionDrinks"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textDrinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drinks"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/desplegableDrinks"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/textDrinks"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkBoxDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <CheckBox
                    android:id="@+id/drinkCb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/drinkCb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/drinkCb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/drinkCb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/drinkCb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/drinkCb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/drinkCb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/drinkCb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/drinkCb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/drinkCb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/eleccionDesserts"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textDesserts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desserts"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/desplegableDesserts"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/textDesserts"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkBoxDesserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:visibility="gone">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <CheckBox
                    android:id="@+id/dessertCb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/dessertCb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/dessertCb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/dessertCb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/dessertCb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/dessertCb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/dessertCb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/dessertCb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"/>

                <CheckBox
                    android:id="@+id/dessertCb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"/>

                <CheckBox
                    android:id="@+id/dessertCb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"/>

            </GridLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/time"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/calendar"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@+id/time"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReservar"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/reserve_button"
            android:padding="8dp"
            android:text="@string/reserve"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

    </LinearLayout>

</ScrollView>